				<img src="/images/right_corner.png" />
		</div>
		<script>
		$(function(){
			lclove.params.keyword = '$!params.keyword';
			lclove.params.sortType = '$!params.sortType';
            lclove.params.navtype = '$!params.navtype';
            lclove.params.isSurvey = true;
			lclove.params.position = '2';
			
			//固定头部导航
			$("#myHeader").topMenu();
			
			//通用搜索
			$(".search_area").searchByType();
			
			<!-- 微电影图文推荐-->
			$(".recommend_show").recommandShow();
			
			<!-- TOP 6-->
			$(".hot_article").topShow();
			
			$(".content_list").researchList();
			
			//固定页尾
			$("body").footerModule();
			
			//返回顶部
			$.backToTop();
		});
		</script>
		<script src="${staticPath}js/pintuer.js"></script>
