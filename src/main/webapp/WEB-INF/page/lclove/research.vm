		<link rel="stylesheet" type="text/css" href="${staticPath}css/home_main.css" />
		<link rel="stylesheet" type="text/css" href="${staticPath}css/navigation.css" />
		<script src="${staticPath}js/jquery.js"></script>
		<script src="${staticPath}js/lclove-util.js"></script>
	</head>
	
	<body>
		<!-- 固定头部导航 -->
		<div id="myHeader"></div>
		<!-- 固定头部导航 -->
		
		<!-- 答题详情 -->
		<div class="wrap_content clear">
			<div style="overflow:hidden; position:absolute; left:-224px;">
				<img src="/images/left_smoke.png" />
			</div>
			<div class="left_flower">
				<img src="/images/left_flower.png" />
			</div>
			<div class="right_smoke" style="overflow:hidden; position:absolute; top: -200px; left:1050px;">
				<img src="/images/right_smoke.png" />
			</div>
			<div class="right_flower">
				<img src="/images/right_flower.png" />
			</div>
			<div class="content_left">
				<!-- 列表 LEFT: BANNER -->
