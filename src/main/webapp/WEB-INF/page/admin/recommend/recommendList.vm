<form method="post" action="" id="listform">
    <div class="panel admin-panel">
        <div class="panel-head"><strong class="icon-reorder"> 推荐列表</strong></div>
        <div class="padding border-bottom">
            <ul class="search" style="padding-left:10px;">
                <li> <a class="button border-main icon-plus-square-o" href="${basePath}admin/recommend/editRecommend.xhtml"> 添加推荐</a> </li>
                <li>搜索：</li>
                <li>
                    <select name="type" class="input" style="width:200px; line-height:17px;" onchange="changesearch(this.value)">
                        <option value="">请选择分类</option>
                        #foreach($position in $positionList)
                            <option value="$position.id"
                                    #if($VmUtils.eq($position.id, $selectPosition))selected#end>$position.name</option>
                        #end
                    </select>
                </li>
##                <li>
##                    <input type="text" placeholder="请输入搜索关键字" name="keyword" class="input" style="width:250px; line-height:17px;display:inline-block" />
