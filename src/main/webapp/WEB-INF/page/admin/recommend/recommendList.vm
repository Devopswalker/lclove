            </ul>
        </div>
        <table class="table table-hover text-center">
            <tr>
                <th width="100" style="text-align:left; padding-left:20px;">缩略图</th>
                <th>位置</th>
                <th>顺序</th>
                <th>图片链接</th>
                <th>跳转链接</th>
                <th>描述</th>
                <th width="310">操作</th>
            </tr>
            <volist name="list" id="vo">
                #foreach($recommend in $recommendList)
                    <tr>
                        <td style="text-align:left; padding-left:20px;">
                            <img src="$recommend.imgUrl" alt="" width="70" height="50" />
                        </td>
                        <td>$positionMap.get($recommend.position).name</td>
                        <td>$!recommend.seq</td>
                        <td>$!recommend.imgUrl</td>
                        <td>$!recommend.recommendUrl</td>
                        <td>$!recommend.description</td>
                        <td>
                            <div class="button-group">
                                <a class="button border-main" href="${basePath}admin/recommend/editRecommend.xhtml?id=$recommend.id"><span class="icon-edit"></span> 修改</a>
                                <a class="button border-red" href="javascript:void(0)" onclick="return deleteRecommend($recommend.id)"><span class="icon-trash-o"></span> 删除</a>
                            </div>
                        </td>
                    </tr>
                #end
                <tr>
                    <td colspan="8">
                        <div class="pagelist">
                            <a href="">上一页</a> <span class="current">1</span><a href="">2</a><a href="">3</a><a href="">下一页</a><a href="">尾页</a>
                        </div>
                    </td>
                </tr>
        </table>
    </div>
</form>
